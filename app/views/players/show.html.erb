
<h1><%= @player.name %></h1>

<% if flash[:notice] %>
  <div class="flash notice">
    <p><%= flash[:notice] %></p>
  </div>
<% end %>

<div>
<p>Team:  <%= @player.team.name if @player.team %></p>
<p>Email: <%= @player.email %></p>
</div>

<p><%= link_to "Edit Player", edit_player_path(@player) %></p>
<p><%= link_to "All Players", :players %></p>
